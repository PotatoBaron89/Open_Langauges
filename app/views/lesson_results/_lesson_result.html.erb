<div id="<%= dom_id lesson_result %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Lesson:</strong>
    <%= lesson_result.lesson_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this lesson result", lesson_result, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this lesson result', edit_lesson_result_path(lesson_result), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
