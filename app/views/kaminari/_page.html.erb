
<% if page.current? %>
  <%= link_to url, class: 'item active', title: page, class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 border-t-2 pt-4 px-4 inline-flex items-center text-sm font-medium", remote: remote do %>
    <%= page %>
  <% end %>
<% else %>
  <%= link_to url, class: 'item', title: page, class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 border-t-2 pt-4 px-4 inline-flex items-center text-sm font-medium", remote: remote do %>
    <%= page %>
  <% end %>
<% end %>
