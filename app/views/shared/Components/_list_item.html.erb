

  <li class="bg-gray-50 shadow overflow-hidden px-4 py-4 sm:px-6 sm:rounded-md flex justify-around item-center no-underline hover:bg-blue-400 focus:outline-none focus:ring-2 focus:ring-green-600 focus:ring-opacity-50">
    <% if local[:path] %>
      <a href="<%= local[:path] %>" class="no-underline">
        <% local[:contents].each do |item| %>
          <strong><%= item[1] %></strong>
        <% end %>
      </a>
    <% end %>
    <% if local[:edit] && local[:path] %>
      <%= link_to 'Edit', local[:edit_path], class: "hover:bg-green-400 hover:text-white w-max inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-green-100 text-pink-800" %>
    <% end %>
    <% if local[:delete] && local[:path] %>
      <%= button_to 'Delete', local[:word_path], method: :delete, data: { confirm: "Are you sure you want to delete this item?" }, class: "hover:bg-pink-400 hover:text-white w-max inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-pink-100 text-pink-800" %>
    <% end %>
  </li>
<% if local[:path] %>

<% end %>