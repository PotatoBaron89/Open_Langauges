<% if local[:path] %>
  <a href="<%= local[:path] %>" class="no-underline">
<% end %>
  <li class="bg-gray-50 shadow overflow-hidden px-4 py-4 sm:px-6 sm:rounded-md flex justify-around item-center no-underline hover:bg-blue-400 focus:outline-none focus:ring-2 focus:ring-green-600 focus:ring-opacity-50">
    <% local[:contents].each do |item| %>
      <strong><%= item[1] %></strong>
    <% end %>

    <% if local[:delete] && local[:path] %>
      <%= button_to 'Delete', local[:path], method: :delete, data: { confirm: "Are you sure you want to delete this item?" }, class: "w-max inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-pink-100 text-pink-800" %>
    <% end %>




  </li>
<% if local[:path] %>
  </a>
<% end %>