<div id="<%= dom_id local_assigns[:body] %>">
  <li  class="bg-blue-200 shadow overflow-hidden px-4 py-4 sm:px-6 sm:rounded-md flex justify-around item-center no-underline hover:bg-blue-400 focus:outline-none focus:ring-2 focus:ring-green-600 focus:ring-opacity-50">
    <% if local_assigns[:path] %>
      <a href="<%= local_assigns[:path] %>" class="no-underline">
        <% local_assigns[:content].each do |item| %>
          <strong><%= item %></strong>
        <% end %>
      </a>
      <div>
        <% if local_assigns[:edit] && local_assigns[:path] %>
          <%= link_to 'Edit', local_assigns[:edit_path], class: "justify-center w-20 border hover:bg-green-400 hover:text-white  inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-green-100 text-pink-800" %>
        <% end %>
        <%= button_to 'Delete', local_assigns[:path], method: :delete, data: {
          "turbo-method": :delete,
          confirm: "Are you sure you want to delete this item?" },
                      class: "hover:bg-pink-400 hover:text-white w-max inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-pink-100 text-pink-800" %>
    <% end %>
    </div>
  </li>
</div>