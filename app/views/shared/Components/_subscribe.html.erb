

<% if @subscribe.nil? %>
  <div class="flex flex-col items-center">
    <%= button_to "Subscribe", subscribes_path, params: { subscribe: { course_id: @course.id }}, method: :post, class: "inline-flex items-center px-5 py-2 border border-transparent text-base font-medium rounded-full shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <span class="w-max italic"><%= @course.subscribes.count %> Subscriptions</span>
  </div>
<% else %>
  <!--      Normal likes_path(@like.id) creating url with .id for some reason-->
  <%= button_to "UnSubscribe", "#{subscribes_path}/#{@subscribe.id}", method: :delete, class: "inline-flex items-center px-5 py-2 border border-transparent text-base font-medium rounded-full shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  <span class="w-max italic"><%= @course.subscribes.count %> Subscriptions</span>
<% end %>


