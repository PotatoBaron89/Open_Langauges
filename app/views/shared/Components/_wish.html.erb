
<% if @wish.nil? %>
  <div class="flex flex-col items-center">
  <%= button_to "Wish", wishes_path, params: { wish: { course_id: @course.id }}, method: :post, class: "inline-flex items-center px-5 py-2 border border-transparent text-base font-medium rounded-full shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <span class="w-max italic"><%= @course.wishes.count %> Wishes</span>
  </div>
<% else %>

  <div class="flex flex-col items-center">
  <%= button_to "Unwish", "#{wishes_path}/#{@wish.id}", method: :delete, class: "inline-flex items-center px-5 py-2 border border-transparent text-base font-medium rounded-full shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  <span class="w-max italic"><%= @course.wishes.count %> Wishes</span>
  </div>
<% end %>
