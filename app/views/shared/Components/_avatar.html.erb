<a href="<%= content[:path] %>" class="overflow-hidden h-full relative justify-around items-center mb-3 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent">
<div class="inline-flex w-full ">
  <div class="h-full relative inline-flex w-max items-center">
<!--    STATUS INDICATOR-->
    <% if content[:user].updated_at > 2.minutes.ago %>
      <i class="fas relative fa-circle text-green-400 absolute inset-y-0 "></i>
    <% else %>
      <i class="fas relative shadow-inner fa-circle text-red-500 absolute inset-y-0"></i>
    <% end %>

<!--    AVATAR-->
    <% if content[:user].image.attached? %>
      <%= image_tag content[:user].image, width: 200, class: 'inline-block h-10 w-10 rounded-full object-cover m-1' %>
    <% else %>
      <%= image_tag 'https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png', width: 200, class: 'inline-block h-10 w-10 rounded-full object-cover m-1' %>
    <% end %>
  </div>
<!--  NAME-->
  <% if content[:user] %>
    <div class="ml-3 no-underline flex items-center truncate">
      <p class="text-sm font-medium text-gray-200 group-hover:text-gray-200 overflow-ellipsis">
        <%= content[:user].name %>
      </p>
    </div>
  <% end %>
</div>




</a>