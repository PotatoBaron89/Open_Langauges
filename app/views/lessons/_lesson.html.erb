<div class="p-5 bg-gradient-to-r from-purple-400 via-pink-500 to-yellow-500 min-w-full">
  <div class="rounded overflow-hidden shadow-lg rounded-b-md fd-cl p-5 bg-white">
    <div id="<%= dom_id lesson %>">
      <div class="flex justify-between">
        <%= render 'shared/Components/avatar', content: { user: lesson.user, path: user_path(lesson.user.id) } %>
        <div class="font-black">Created: <%= lesson.created_at.to_date.strftime("%h %d") %></div>
        <div class="font-black">Updated: <%= lesson.updated_at.to_date.strftime("%h %d") %></div>
      </div>
      <p class="my-5">
        <strong class="block text-5xl font-black mb-1"><%= lesson.title %></strong>

      </p>

      <p class="my-5">
        <%= lesson.content %>

      </p>


      <% if action_name != "show" %>
        <%= link_to "Show this lesson", lesson, class: "mt-3 inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <% if @user.has_role? :admin or lesson.course.user.id == @current_user.id %>
        <%= link_to 'Edit this lesson', edit_lesson_path(lesson), class: "mt-3 inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <% end %>
        <hr class="mt-6">
      <% end %>
    </div>
  </div>
</div>