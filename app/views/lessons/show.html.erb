<div class="w-full flex min-h-screen ">
  <div class="mx-auto min-w-full bg-pink-50 p-5 rounded-3xl">
<div data-turbo="true" class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto" >
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @lesson %>
    <!--    CREATE QUIZZES, IGNORE PARTIAL NANE, NEEDS REFACTORING-->
    <%= render '/shared/Components/divider', content: 'Quizzes' %>

    <div  id="" class="">
      <%= render '/quizzes/form', flashcard_list: Quiz.new, lesson: @lesson %>
    </div>

    <%== pagy_bootstrap_nav(@pagy) %>
    <ul data-turbo="true" id="quiz_list" class="divide-y divide-gray-200">
      <% if @lesson.quizzes %>
        <% @lesson.quizzes.each do |f|  %>
          <div id="<%= dom_id f %>">
            <%= render 'shared/Components/list_item', local: { contents:
                                                                 { first: "ID: #{ f.id }",
                                                                   second: f.title },
                                                               delete: true,
                                                               edit: true, edit_path: edit_quiz_path(f.id),
                                                               path: quiz_path(f.id)} %>
          </div>
        <% end %>
      <% end %>
    </ul>


<!--    CREATE FLASHCARD LIST-->
    <%= render '/shared/Components/divider', content: 'Flashcard Lists' %>
    <div  id="" class="">
        <%= render '/flashcard_list/form', flashcard_list: FlashcardList.new, lesson: @lesson %>
    </div>


      <ul data-turbo="true" id="flashcard-list" class="divide-y divide-gray-200">
        <% if @lesson.flashcard_lists %>
          <% @lesson.flashcard_lists.each do |f|  %>
            <div id="<%= dom_id f %>">
              <%= render 'shared/Components/list_item', local: { contents:
                                                        { first: "ID: #{ f.id }",
                                                    second: f.title },
                                                    delete: true,
                                                    path: flashcard_list_path(f.id)} %>
           </div>
        <% end %>
      <% end %>
    </ul>



<!--    BUTTONS-->
    <%= link_to 'Edit this lesson', edit_lesson_path(@lesson), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Delete this lesson', lesson_path(@lesson), method: :delete, data: { confirm: "Are you sure you want to delete this lesson?" }, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to lessons', lessons_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Back to Course', course_path(@lesson.course.id), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
  </div>
</div>