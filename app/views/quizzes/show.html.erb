<div class="w-full flex min-h-screen ">
  <div class="flex flex-col items-center mx-auto min-w-full bg-pink-50 p-5 rounded-3xl">
    <section class="p-5 bg-gradient-to-r from-purple-400 via-pink-500 to-yellow-500 min-w-full rounded-lg m-5">
      <div class="rounded overflow-hidden shadow-lg rounded-b-md fd-cl p-5 bg-white">

  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @quiz %>

    <nav class="mt-5 flex flex-wrap justify-center w-full">
    <%= link_to 'Edit this quiz', edit_quiz_path(@quiz), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Delete this quiz', quiz_path(@quiz), method: :delete, data: { confirm: "Are you sure you want to delete this quiz?" }, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to Lesson', lesson_path(@quiz.lesson), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </nav>
  </div>
</div>
    </section>
    </div>
</div>

