<%= form_with(model: user, class: "contents") do |form| %>

  <% if user.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li>def<%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<!--  USER INFO-->
  <div class="pt-5 pb-5 bg-gray-300 text-center rounded-full py-3 px-6">
    <%= current_user.email %>
  </div>

  <!--  NAME-->
  <div class="my-5">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

<!--  EMAIL -->
  <%# if current_user.has_role?(:admin) %>
    <div class="my-5">
      <%= form.label :email %>
      <%= :email %>
    </div>
    <%# end %>


<!--  Timezone-->

  <!--  Timezone-->

  <div class="my-5">
    <%= form.label :timezone %>
    <%= form.collection_select :timezone, @timezones, :name, :name, { value: current_user.email }, selected: current_user.email, class: "border border-gray-300 rounded-full text-gray-600 h-10 pl-5 pr-10 bg-white hover:border-gray-400 focus:outline-none appearance-none" %>
  </div>


<!--  DISPLAY NAME-->
  <div class="my-5">
    <%= form.label :display_name %>
    <%= form.text_field :display_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

<!--  ABOUT-->
  <div class="my-5">
    <%= form.label :about %>
    <%= form.text_area :about, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

<!--  AVATAR-->
  <div class="my-5">
    <%= form.label :image %>
    <%= form.file_field :cover_image, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium" %>
  </div>
<% end %>
