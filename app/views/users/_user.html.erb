<div id="<%= dom_id user %>" class="w-screen">
  <section class="flex-auto justify-center bg-blue-100 w-8/12 p-5 rounded-lg">
    <p class="my-5">
      <strong class="block font-medium mb-1">Name:</strong>
      <%= user.name %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Email:</strong>
      <%= user.email %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Dob:</strong>
      <% if defined?(user.dob) %>
        <%= user.dob %>
      <% end %>


    </p>


    <% if action_name != "show" %>
      <%= link_to "Show this user", user, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to 'Edit this user', edit_user_path(user), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
      <hr class="mt-6">
    <% end %>
  </section>
</div>
