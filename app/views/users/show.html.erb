<div class="mx-auto w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @user %>


    <div class="bg-white overflow-hidden shadow rounded-lg w-8/12 grid-cols-2 bg-yellow-50 mt-5">
      <div class="flex bg-white items-center space-between justify-around flex-wrap">

        <div class="m-3">
          <strong>Current Sign In: </strong>
          <% if @user.current_sign_in_at %>
            <%= @user.current_sign_in_at.in_time_zone(current_user.timezone) %> (<%= current_user.timezone %>)
            <%# raise %>
          <% else %>
            NA
          <% end %>
        </div>

        <div class="m-3">
          <strong>Sign In Count: </strong>
          <%= @user.sign_in_count %>
        </div>


      <div class="m-3">
        <strong>Last Sign In: </strong>
        <% if @user.current_sign_in_at %>
          <%= @user.last_sign_in_at.in_time_zone(current_user.timezone) %> (<%= current_user.timezone %>)
        <% else %>
          NA
        <% end %>
      </div>


      <div class="m-3">
        <strong>Current Sign In IP: </strong>
        <%= @user.current_sign_in_ip %>
      </div>

      <div class="m-3">
        <strong>Last Sign In IP: </strong>
        <%= @user.last_sign_in_ip %>
      </div>
    </div>
  </div>




      <%= link_to 'Edit this user', edit_user_path(@user), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= button_to 'Delete this user', user_path(@user), method: :delete, data: { confirm: "Are you sure you want to delete this user?" }, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
      <%= link_to 'Back to users', users_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to 'Edit Your Account', edit_user_path(@user), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
